<Page
    x:Class="Aula09092015.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aula09092015"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel 
            Orientation="Vertical" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <ListBox Name="ListBox1" ItemsSource="{Binding}" SelectionMode="Single" />
            <TextBlock Name="tbkMensagemNome" FontSize="44" />
            <TextBlock Name="tbkMensagemAno" FontSize="44" />
            <TextBlock Name="tbkMensagemPlaca" FontSize="44" />
        </StackPanel>
    </Grid>
</Page>
