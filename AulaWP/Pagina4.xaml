<Page
    x:Class="AulaWP.Pagina4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AulaWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <Image Source="Assets/Logo.scale-240.png" Width="200" /> 
            <RadioButton Name="rbnOpcao1" Content="Opção 1" GroupName="rbnGrupo" />
            <RadioButton Name="rbnOpcao2" Content="Opção 2" GroupName="rbnGrupo" />
            <RadioButton Name="rbnOpcao3" Content="Opção 3" GroupName="rbnGrupo" />
            <Button Name="btnOpcoes" Content="Clique" Click="btnOpcoes_Click" />
            <TextBox Name="tbkResposta" />
        </StackPanel>
    </Grid>
</Page>
